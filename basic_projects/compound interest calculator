# Initialize variables
principle = 0
rate = 0
time = 0

# Input validation for principle
while principle <= 0:
    principle = float(input("Enter the principle amount: "))
    if principle <= 0:
        print("Principle cannot be less than or equal to 0")

# Input validation for rate
while rate <= 0:
    rate = float(input("Enter the rate of interest: "))
    if rate <= 0:
        print("Rate cannot be less than or equal to 0")

# Input validation for time
while time <= 0:
    time = int(input("Enter the time (in years): "))
    if time <= 0:
        print("Time cannot be less than or equal to 0")

# Compound Interest Calculation
total = principle * pow((1 + rate / 100), time)

print(f"Total amount after {time} years: {total:.2f}")
